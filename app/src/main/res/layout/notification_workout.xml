
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/notification_background">

    <!-- Exercise Title - White Text -->
    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <!-- Sets Information - White Text -->
        <TextView
            android:id="@+id/sets_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_sets"
            app:drawableTint="@color/white" />

        <!-- State Information - White Text -->
        <TextView
            android:id="@+id/state_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:drawablePadding="4dp"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_state"
            app:drawableTint="@color/white" />

        <!-- Timer Information - White Text -->
        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/timer"
            app:drawableTint="@color/white" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progressTint="@color/notification_accent"
        android:progressBackgroundTint="@color/md_theme_outlineVariant"/>
</LinearLayout>